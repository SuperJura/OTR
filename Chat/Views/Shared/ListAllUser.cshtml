@model List<string>
<div class="navbar-right">
    <div class="container">
        <H3>All users</H3>
        <ul>
            @for (int i = 0; i < Model.Count; i++)
            {
                <li> 
                    @using (Html.BeginForm("StartChat", "Chat", FormMethod.Post, new { @class = "form-inline" }))
                    {
                        if (Session["name"].ToString() == Model[i])
                        {
                            <span>@Model[i] (you)</span>
                        }
                        else
                        {
                                <input type="hidden" value="@Model[i]" />
                                <input type="submit" value="@Model[i] - Start Chat" />
                        }
                    }
                </li>
            }
        </ul>
    </div>
</div>