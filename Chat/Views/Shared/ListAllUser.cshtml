@model List<string>

<div class="navbar-right">
    <div class="container">
        <H3>Odaberite osobu za razgovor</H3>
        <ul>
            @for (int i = 0; i < Model.Count; i++)
            {
                <li> 
                        @if (Session["name"].ToString() == Model[i])
                        {
                            <span>@Model[i] (you)</span>
                        }
                        else
                        {
                          <span class="clickable" onclick="SendChatInvite('@Model[i]')">@Model[i]</span>
                        }
                    }
                </li>
            }
        </ul>
    </div>
</div>
<script>
    function SendChatInvite(to) {
       $.ajax({
            url: '@Url.Action("SendChatInvite", "Chat")',
            data: { to: to },
            type: 'POST'
        })

            .done(function () {
                alert("Zahtjev je poslan ako odobren razgovor će se otvoriti u novoj kartici.");
            })
            .fail(function (xhr, status, error) {
                alert('Dogodila se pogreška');
            });
    }

</script>